<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiot.aiotbackstage.mapper.SysSensorRecMapper">

    <resultMap id="BaseResultMap" type="com.aiot.aiotbackstage.model.entity.SysSensorRecEntity">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="site_id" jdbcType="VARCHAR" property="siteId" />
        <result column="sensor" jdbcType="BIGINT" property="sensor" />
        <result column="value" jdbcType="VARCHAR" property="value" />
        <result column="time" jdbcType="TIMESTAMP" property="time" />
    </resultMap>

    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, site_id siteId, sensor, `value`, `time`
    </sql>

    <!--auto generated by MybatisCodeHelper on 2020-01-02-->
    <select id="selectAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from sys_sensor_rec
    </select>

    <select id="findAllAverageHourly" parameterType="map" resultType="map">
        SELECT
            a.site_id,
            a.sensor,
            a.fmt_date AS `date`,
            a.fmt_hour AS `hour`,
            AVG( a.`value` ) AS `value`
        FROM
            (
                SELECT
                    site_id,
                    sensor,
                    `value`,
                    DATE_FORMAT( `time`, '%Y-%m-%d' ) AS fmt_date,
                    DATE_FORMAT( `time`, '%H' ) AS fmt_hour
                FROM
                    sys_sensor_rec
                <where>
                    <if test="startTime != null and startTime != '' and endTime != null and endTime != ''">
                        `time` BETWEEN #{startTime} AND #{endTime}
                    </if>
                </where>
            ) AS a
        GROUP BY
            a.site_id,
            a.sensor,
            a.fmt_date,
            a.fmt_hour
    </select>

    <select id="findByTimeGroupBySensor" resultMap="BaseResultMap">
        SELECT
            <include refid="Base_Column_List"></include>
        FROM
            sys_sensor_rec
        WHERE
            ( sensor, time ) IN (
            SELECT
                sensor,
                MAX( time )
            FROM
                sys_sensor_rec
            WHERE
                site_id = #{siteId}
                AND time &lt;= #{time}
            GROUP BY
                sensor
            )
    </select>

</mapper>