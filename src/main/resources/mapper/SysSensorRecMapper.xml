<mapper namespace="com.aiot.aiotbackstage.mapper.SysSensorRecMapper">

    <resultMap id="BaseResultMap" type="com.aiot.aiotbackstage.model.entity.SysSensorRecEntity">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="site_id" jdbcType="VARCHAR" property="siteId" />
        <result column="sensor" jdbcType="BIGINT" property="sensor" />
        <result column="value" jdbcType="VARCHAR" property="value" />
        <result column="time" jdbcType="TIMESTAMP" property="time" />
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, site_id siteId, sensor, `value`, `time`
    </sql>

    <!--auto generated by MybatisCodeHelper on 2020-01-02-->
    <select id="selectAll" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from sys_sensor_rec
    </select>

    <select id="findAllAverageByDay" parameterType="map" resultType="map">
        SELECT
            a.sensor,
            a.fmt_date AS `date`,
            AVG( a.`value` ) AS `value`
        FROM
            (
                SELECT
                    *,
                    DATE_FORMAT( time, '%Y-%m-%d' ) AS fmt_date,
                    DATE_FORMAT( time, '%H:%i:%s' ) AS fmt_time
                FROM
                    sys_sensor_rec
            ) AS a
        WHERE
           a.time &gt;= #{startTime}
            AND a.time &lt;= #{endTime}
            AND a.fmt_time &gt;= #{sTime}
            AND a.fmt_time &lt;= #{eTime}
            AND a.site_id = #{siteId}
        GROUP BY
            a.sensor,
            a.fmt_date
    </select>

